@using Webdiyer.WebControls.Mvc
@model Webdiyer.WebControls.Mvc.PagedList<BlogSystem.Dto.ArticleDto>
@{
    ViewBag.Title = "ArtcleList2";
}

<h2>ArtcleList</h2>

<p>
    @Html.ActionLink("Create New", "CreateArtcle")
</p>
<table class="table table-bordered table-hover">
    <thead>


        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.CreateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoodCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BadCount)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.ImagePath)
                </th>*@

            <th></th>

        </tr>
    </thead>
    <tbody>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.CreateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GoodCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BadCount)
                </td>

                @*<td>
                        @Html.DisplayFor(modelItem => item.ImagePath)
                    </td>*@
                <td>
                    @Html.ActionLink("Edit", "EditArtcle", new { id = item.Id }) |
                    @Html.ActionLink("Details", "ArtcleDetails2", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DelArtcle", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6">
                <nav>
                    @Html.Pager(Model, new PagerOptions { PageIndexParameterName = "pageIndex",
                   ContainerTagName = "ul", CssClass = "pagination",
                   CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>",
                   DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>",
                   PagerItemTemplate = "<li>{0}</li>", Id = "bootstrappager" })
                    
                </nav>
            </td>

        </tr>
    </tfoot>

</table>
@section headers{
    
    <style>
        .pagination {
            display: flex;
            flex-direction: row;
            justify-content: center; /*//横行显示*/
            margin: 0;
            padding: 3px;
        }
      
    </style>
    }